@model BidVM
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Bid.Id != 0 ? "Update" : "Create") Bid</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Bid.Id" hidden />
            <div class="border p-3">
                @* <div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Bid.StartTime" type="datetime-local" class="form-control border-0 shadow" />
                    <label asp-for="Bid.StartTime" class="ms-2"></label>
                    <span asp-validation-for="Bid.StartTime" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Bid.EndTime" type="datetime-local" class="form-control border-0 shadow" />
                    <label asp-for="Bid.EndTime" class="ms-2"></label>
                    <span asp-validation-for="Bid.EndTime" class="text-danger"></span>
                </div>
                <div class="row justify-content-center pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.Bid.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Slot" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to Slots
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(function () {
            // Get the current date and time
            var currentDate = new Date();

            // Format the date as "YYYY-MM-DDTHH:mm" (matching the datetime-local input type)
            var formattedDate = currentDate.toISOString().slice(0, 16);

            // Set the input field's value to the current date and time
            $("#datePicker").val(formattedDate);
        });
    </script>
}